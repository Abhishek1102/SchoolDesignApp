<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="0dp"
    android:layout_marginTop="@dimen/_10sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_10sdp"
        android:background="@drawable/edittext_color_border_8">

        <com.example.schoolproject.helper.CustomTextViewSemiBold
            android:id="@+id/tv_timetable_subjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Computer Science"
            style="@style/black_12"
            android:layout_marginTop="@dimen/_10sdp"
            android:singleLine="true"/>

        <com.example.schoolproject.helper.CustomTextViewMedium
            android:id="@+id/tv_timetable_subjectDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="08:15-09:00 am"
            style="@style/gray_11"
            android:layout_marginTop="@dimen/_10sdp"
            android:singleLine="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/gray_2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp">

            <com.example.schoolproject.helper.CustomTextViewMedium
                android:id="@+id/tv_timetable_subjectTeacherName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="James Smith"
                style="@style/gray_11"/>

            <com.example.schoolproject.helper.CustomTextViewSemiBold
                android:id="@+id/tv_timetable_periodNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Period 1"
                style="@style/black_11"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>