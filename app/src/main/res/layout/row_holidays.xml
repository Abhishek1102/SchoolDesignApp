<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginHorizontal="@dimen/_1sdp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginBottom="@dimen/_1sdp"
    android:gravity="center_vertical"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_color_border_8"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.schoolproject.helper.CustomTextViewSemiBold
                android:id="@+id/tv_holidayName"
                style="@style/black_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="start|center_vertical"
                android:text="Diwali" />

            <com.example.schoolproject.helper.CustomTextViewMedium
                android:id="@+id/tv_holidayDay"
                style="@style/black_10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="end|center_vertical"
                android:singleLine="true"
                android:text="Saturday" />

        </LinearLayout>


        <com.example.schoolproject.helper.CustomTextViewMedium
            android:id="@+id/tv_holidayDate"
            style="@style/black_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="15 November" />
    </LinearLayout>
</androidx.cardview.widget.CardView>