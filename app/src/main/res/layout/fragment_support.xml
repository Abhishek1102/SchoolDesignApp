<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    tools:context=".fragment.SupportFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/blue_gradient">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:src="@drawable/arrow" />

                <com.example.schoolproject.helper.CustomTextViewMedium
                    style="@style/white_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:text="Support" />
            </LinearLayout>

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85"
        android:background="@drawable/white_tltr_20"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_10sdp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/support"
            android:layout_marginTop="@dimen/_50sdp"/>

        <com.example.schoolproject.helper.CustomTextViewSemiBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/get_support"
            style="@style/black_16"
            android:layout_marginTop="@dimen/_30sdp"
            android:includeFontPadding="false"
            android:gravity="center_horizontal"/>

        <com.example.schoolproject.helper.CustomTextViewMedium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/gray_12"
            android:includeFontPadding="false"
            android:text="@string/for_any_support_request_regards_your_orders_or_deliveries_please_feel_free_to_speak_with_us_at_below"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:lineSpacingExtra="@dimen/_3sdp"/>

        <com.example.schoolproject.helper.CustomTextViewSemiBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            style="@style/black_12"
            android:layout_marginTop="@dimen/_50sdp"
            android:text="Call us. +91 97263XXXXX"/>
        <com.example.schoolproject.helper.CustomTextViewSemiBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="Mail us - abcd@gmail.com"
            style="@style/black_12"
            android:gravity="center_horizontal"/>

    </LinearLayout>



    </LinearLayout>

</RelativeLayout>