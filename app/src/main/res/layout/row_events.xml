<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_1sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_color_border_8"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <com.example.schoolproject.helper.CustomTextViewSemiBold
            android:id="@+id/tv_eventTitle"
            style="@style/black_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Cycle Race" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                app:cardCornerRadius="@dimen/_8sdp">

                <ImageView
                    android:id="@+id/iv_event"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/cyclerace" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/big_clock"
                        android:tint="@color/colorPrimary" />

                    <com.example.schoolproject.helper.CustomTextViewSemiBold
                        android:id="@+id/tv_eventTime"
                        style="@style/black_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:singleLine="true"
                        android:text="06 Jan 20,09:00 AM"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

                <com.example.schoolproject.helper.CustomTextViewMedium
                    android:id="@+id/tv_eventDescription"
                    style="@style/gray_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="5"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_5sdp"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>