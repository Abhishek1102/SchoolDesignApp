<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:orientation="vertical"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_8sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/edittext_color_border_8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_blue_layout"
            android:paddingHorizontal="@dimen/_5sdp"
            android:paddingVertical="@dimen/_3sdp">

            <com.example.schoolproject.helper.CustomTextViewSemiBold
                android:id="@+id/tv_assigment_SubjectName"
                style="@style/white_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mathematics" />
        </LinearLayout>

        <com.example.schoolproject.helper.CustomTextViewSemiBold
            android:id="@+id/tv_assigment_Title"
            style="@style/black_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_10sdp"
            android:text="Surface Areas &amp; Volumes" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.schoolproject.helper.CustomTextViewMedium
                style="@style/gray_10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/assign_date" />

            <com.example.schoolproject.helper.CustomTextViewMedium
                android:id="@+id/tv_assignDate"
                style="@style/black_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 Nov 2020" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_10sdp">

            <com.example.schoolproject.helper.CustomTextViewMedium
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Last Submission Date"
                style="@style/gray_10"/>

            <com.example.schoolproject.helper.CustomTextViewMedium
                android:id="@+id/tv_submissionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 Dec 2020"
                style="@style/black_11"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lv_tobesubmitted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="@dimen/_8sdp"
            android:background="@drawable/rounded_white_button_8">


            <com.example.schoolproject.helper.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To be Submitted"
                style="@style/white_12"
                android:singleLine="true"/>

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>